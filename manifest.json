{
  "manifest_version": 3,
  "name": "小濃縮 (Quick Summary)",
  "version": "1.4",
  "description": "快速濃縮網頁內容,Youtube內容 (支援Groq/Chatgpt/Ollama等API大型語言模型 自由切換)",
  "default_locale": "zh_TW",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html"
}