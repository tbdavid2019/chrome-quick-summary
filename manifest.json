{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.2",
  "description": "__MSG_extensionDescription__",
  "default_locale": "zh_TW",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://*.groq.com/*",
    "<all_urls>"
  ],
  "options_page": "options.html"
}